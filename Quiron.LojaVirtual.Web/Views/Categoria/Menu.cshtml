@model System.Collections.Generic.IEnumerable<string>

@Html.ActionLink("Todos os Produtos", "ListaProdutos", "Vitrine", null, new { @class = "btn btn-block btn-default btn-lg" })

@foreach (var s in Model)
{
    @Html.ActionLink(s, "ListaProdutos", "Vitrine", new { categoria = s }, new 
                                                                                {
                                                                                    @class = "btn btn-block btn-default btn-lg" +
                                                                                    (s == ViewBag.CategoriaSelecionada ? " btn-primary": "")
                                                                                })
}